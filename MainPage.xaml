<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PojarCosminLab7.MainPage"
    Title="Home">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="Center">

            <Image
                Source="shop_list.jpg"
                WidthRequest="200"
                HeightRequest="200"
                Aspect="AspectFit"
                SemanticProperties.Description="Poza utilizatorului" />

            <Label
                Text="Hello World!"
                FontSize="20"
                HorizontalTextAlignment="Center" />

            <Label
                Text="Welcome to &#10; NET Multi-Platform App UI"
                FontSize="18"
                HorizontalTextAlignment="Center" />

            <Button 
              x:Name="CounterBtn"
              Text="Click me"
              Clicked="OnCounterClicked"
              FontSize="18"
              HorizontalOptions="Center"
              WidthRequest="200"
              HeightRequest="48" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
